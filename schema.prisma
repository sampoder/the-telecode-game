datasource db {
	provider = "sqlite"
	url      = "file:dev.db"
}
 
generator db {
	provider = "go run github.com/steebchen/prisma-client-go"
}
 
model Game {
	id        String   @id
	players   DateTime @default(now())
	started   Boolean @default(false)
}

model Round {
	id      String @default(cuid()) @id
	prompts String[]
	code    String[]
	language String
}

model Player {
	id      String @default(cuid()) @id
	creator Boolean
	gameID  String
}